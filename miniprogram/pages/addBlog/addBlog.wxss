/* pages/addBlog/addBlog.wxss */
page{
  background-color: #fff;
}
.page{
  background-color: #fff;
}
.backToMine{
  text-align: center;
  font-size: 32rpx;
  height: 60rpx;
  width: 750rpx;
  margin: 10rpx auto;
  line-height: 60rpx;
  border-radius: 30rpx;
  background-color: #b4b8d3d3;
  box-shadow: 0 0 10rpx #b4b8d3d3;
  opacity: 0.3;
  color: #fff;
}
.title{
  font-size: 36rpx;
  line-height: 60rpx;
  color: #666;
  text-align: center;
  width:180rpx;
  margin: 20rpx auto 0;
  border-bottom: 1rpx solid #ccc;
}
.content{
  padding-bottom: 40rpx;
}
.content .section{
  margin-top: 40rpx;
  padding: 0 10rpx;
}
.content .section input,.content .section textarea{
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  background-color: #f5f5f5;
  font-size: 32rpx;
  padding: 10rpx;
}
.inputImg{
  display: flex;
  color: #777;
}
.uploadImg{
  text-align:center;
  width: 50%;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  background-color: #f5f5f5;
  font-size: 32rpx;
  padding: 10rpx;
  margin-left: 10rpx;
}
.content .section .picker{
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  background-color: #f5f5f5;
  font-size: 32rpx;
  padding: 10rpx;
  color: #777;
}
.content .section textarea{
  color: #777;
  width: 712rpx;
  height: 120rpx;
}
.content .section .article{
  color: #777;
  height: 200rpx;
}
.content button{
  margin-top: 30rpx;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  width: 300rpx;
  background-color: #b4b8d3d3;
  color: #fff;
}
.content button::after{
  border: none;
}
.blog_content{
  margin-top: 20rpx;
  padding: 10rpx;
}
.blog_content .item{
  display: flex;
  padding: 20rpx 10rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  color: #777;
  background-color: #f5f5f5;
}
.item_title{
  width: 620rpx;
}
.item_del{
  width: 100rpx;
  text-align: center;
  color: #7a81b1;
}